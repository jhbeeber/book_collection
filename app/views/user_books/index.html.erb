<p style="color: green"><%= notice %></p>

<h1>User books</h1>

<table>
  <thread>
    <tr>
      <th>Username</th>
      <th>Book Title</th>
      <th colspan="3"></th>
    </tr>
  </thread>

  <tbody>
    <% @user_books.each do |user_book| %>
      <tr>
        <td><%= User.find_by(id: user_book.user_id)&.username || "User not found" %></td>
        <td><%= Book.find_by(id: user_book.book_id)&.title || "Book not found" %></td>
        <td><%= link_to "Show", user_book %></td>
        <td><%= link_to "Edit", edit_user_book_path(user_book) %></td>
        <td><%= link_to "Destroy", user_book, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

