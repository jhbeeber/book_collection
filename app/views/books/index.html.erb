<div class="books index">
  <h1>Book Collection</h1>
  <h1>This is a test version.</h1>
  <%= link_to("Add A New Book", new_book_path, class: 'action new') %>

  <table class="listing" summary="Book list" style="width: 100%;">
    <tr class="header">
      <th>#</th>
      <th>Book</th>
      <th>Author</th>
      <th>Price</th>
      <th>Published Date</th>
      <th>Publisher</th>
      <th>Pages</th>
      <th>Release Date</th>
      <th>Actions</th>
    </tr>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.position %></td>
      <td><%= book.title %></td>
      <td><%= book.author %></td>
      <td><%= book.price %></td>
      <td><%= book.publishedDate %></td>
      <td><%= book.publisher %></td>
      <td><%= book.pages %></td>
      <td><%= book.releaseDate %></td>
      
      <td class="actions">
        <%= link_to("Details", book_path(book), class: 'action show') %>
        <%= link_to("Update", edit_book_path(book), class: 'action edit') %>
        <%= link_to("Delete", delete_book_path(book), class: 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>

<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>

<% if flash[:alert] %>
  <div class="alert"><%= raw flash[:alert] %></div>
<% end %>